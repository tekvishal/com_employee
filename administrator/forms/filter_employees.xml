<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" description="COM_EMPLOYEE_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />
        <field name="state"
							type="status"
							label="COM_EMPLOYEE_FILTER_STATE"
							description="COM_EMPLOYEE_FILTER_STATE_DESC"
							onchange="this.form.submit();">
							<option value="">JOPTION_SELECT_PUBLISHED</option>
						</field>
        

    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_EMPLOYEE_LIST_FULL_ORDERING"
               description="COM_EMPLOYEE_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.id ASC">COM_EMPLOYEE_ID_ASC</option><option value="a.id DESC">COM_EMPLOYEE_ID_DESC</option><option value="a.state ASC">COM_EMPLOYEE_STATE_ASC</option><option value="a.state DESC">COM_EMPLOYEE_STATE_DESC</option><option value="a.ordering ASC">COM_EMPLOYEE_ORDERING_ASC</option><option value="a.ordering DESC">COM_EMPLOYEE_ORDERING_DESC</option><option value="a.fname ASC">COM_EMPLOYEE_FNAME_ASC</option><option value="a.fname DESC">COM_EMPLOYEE_FNAME_DESC</option><option value="a.lname ASC">COM_EMPLOYEE_LNAME_ASC</option><option value="a.lname DESC">COM_EMPLOYEE_LNAME_DESC</option><option value="a.email ASC">COM_EMPLOYEE_EMAIL_ASC</option><option value="a.email DESC">COM_EMPLOYEE_EMAIL_DESC</option>

        </field>

       <field name="limit"
               type="limitbox"
               label="COM_EMPLOYEE_LIST_LIMIT"
               description="COM_EMPLOYEE_LIST_LIMIT_DESC"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>